    "target": "ES5",
    "module": "CommonJS",
    "lib": ["ES6", "DOM", "DOM.Iterable"],
    "allowJs": true,
    "outDir": "build",
    "rootDir": "src",
    "strict": true,
    "noImplicitAny": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "experimentalDecorators": true
  }
}
